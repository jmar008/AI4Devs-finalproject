# Variables de Entorno para Producción - EasyPanel
# Configurar estas variables en el panel de control de EasyPanel

# Dominio principal
DOMAIN=mcp.jorgemg.es

# Seguridad - Django
SECRET_KEY=tu-secret-key-super-seguro-para-produccion-cambialo
DEBUG=False
ALLOWED_HOSTS=mcp.jorgemg.es,backend,nginx

# Base de datos PostgreSQL
DB_NAME=dealaai_prod
DB_USER=postgres
DB_PASSWORD=tu-password-postgresql-seguro
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@db:5432/dealaai_prod

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# OpenAI API
DEEPSEEK_API_KEY=sk-tu-api-key-de-openai

# CORS y URLs
CORS_ALLOWED_ORIGINS=https://mcp.jorgemg.es
NEXT_PUBLIC_API_URL=https://mcp.jorgemg.es/api/v1
NEXT_PUBLIC_WS_URL=wss://mcp.jorgemg.es/ws
NEXT_PUBLIC_DOMAIN=mcp.jorgemg.es

# Email (opcional - configurar según proveedor)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.tu-proveedor.com
EMAIL_PORT=587
EMAIL_HOST_USER=tu-email@dominio.com
EMAIL_HOST_PASSWORD=tu-password-email
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=DealaAI <noreply@mcp.jorgemg.es>

# Media y Static
MEDIA_URL=/media/
MEDIA_ROOT=/app/media
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Logging
LOG_LEVEL=INFO

# Seguridad SSL
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
